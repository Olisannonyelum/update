<Dialog>:
    size_hint:.7,.3
    md_bg_color: "black"
    height:150
    MDBoxLayout:
        size_hint:1,1
        orientation:"vertical"
        MDGridLayout:
            size_hint:1,1
            rows:1

            MDTextField:
                hint_text: "chapter"
                id:chapter
                size_hint:1,1
                

            MDTextField:
                hint_text: "vers"
                id:vers
                size_hint:1,1
                
            
            MDTextField:
                hint_text: "To"
                id:To
                size_hint:1,1
                
                
        MDGridLayout:
            size_hint:1,1
            rows:1
            MDFlatButton:
                id:cancel
                size_hint:1,1
                text:"cancel"
            MDFlatButton:
                id:ok
                size_hint:1,1
                text:"ok"


